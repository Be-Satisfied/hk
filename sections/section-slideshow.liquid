<div
  class="homepage-slideshow {{ section.settings.dots_position }}"
  data-section-id="{{ section.id }}"
  data-section-type="slideshow"
  {% if section.settings.width == 'wrapper--none' and section.settings.padding_top == 0 %}
    data-overlay-header
  {% endif %}
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;"
>
  <div class="{{ section.settings.width }} section-padding">
    {% if section.blocks.size > 0 %}
      <div
        class="slideshow__wrapper flickity-disabled-mobile flickity-badge-dots"
        data-slideshow-wrapper
        data-custom-scrollbar-items
        data-block-scroll
        data-slideshow-autoplay="{{ section.settings.autoplay }}"
        data-slideshow-slides="{{ section.blocks.size }}"
        data-slideshow-speed="{{ section.settings.autoplay_speed | times: 1000 }}"
      >
        {% for block in section.blocks %}
          <div
            class="slideshow__slide  js-overflow-container section--image {{ block.settings.text_color }}"
            data-slideshow-index="{{ forloop.index0 }}"
            {{ block.shopify_attributes }}
          >
            <div class="hero__content__wrapper {{ block.settings.text_align }}">
              <div class="hero__content mobile--padding-bottom {{ block.settings.color_bg }} js-overflow-content">
                {% unless block.settings.kicker == '' %}
                  <p class="hero__kicker">
                    {{ block.settings.kicker | escape }}
                  </p>
                {% endunless %}
                {% unless block.settings.title == '' %}
                  <!-- <img style="margin-bottom:2px" width="41%" src="{{ 'slideshow-off.png' | asset_url }}" /> -->
                  <div class="mobile--hide small--show medium--show large--show widescreen--show">
                    {% if block.settings.title == 'bug-bounty' %}
                      <h1 class="hero__title h1">Bug Bounty Program</h1>
                      <div class="hero__description h5--body">
                        <b
                          >Deeper Network believes in the power of community <br>
                          collaboration to enhance the security of blockchain <br>
                          technology.
                        </b>
                      </div>
                    {% endif %}

                    {% if block.settings.title == 'Mini' %}
                      <h1 class="hero__title h1">Deeper Connect Mini</h1>
                      <div class="hero__description h5--body">
                        <b
                          >Powerful Web 3.0 Gateway <br>
                          High Security. 7-Layer Enterprise-Class Firewall
                        </b>
                      </div>
                    {% endif %}

                    {% if block.settings.title == 'pico' %}
                      <h1 class="hero__title h1">Deeper Connect Pico</h1>
                      <div class="hero__description h5--body">
                        <b
                          >Portable DPN Privacy <br>
                          Easy Plug-and-Play, Perfect for Traveling
                        </b>
                      </div>
                    {% endif %}

                    {% if block.settings.title == 'MiniSE' %}
                      {% comment %}
                        <h1 class="hero__title h1">
                          DPR Mini SE
                        </h1>
                        <div class="hero__description h5--body">
                          <b>
                            Affordable Home Cybersecurity <br/>
                            A Better and More Secure Internet for Everyone
                          </b>
                        </div>
                      {% endcomment %}
                    {% endif %}
                  </div>

                  <div class="mobile--show small--hide medium--hide large--hide widescreen--hide">
                    {% if block.settings.title == 'bug-bounty' %}
                      <h1 class="hero__title h5" style="font-size:24px">Bug Bounty Program</h1>
                      <div class="hero__description" style="font-size:14px;font-weight:500">
                        <b
                          >Deeper Network believes in the power of <br>
                          community collaboration to enhance the <br>
                          security of blockchain technology.
                        </b>
                      </div>
                    {% endif %}
                  </div>
                {% endunless %}
                {% unless block.settings.richtext == '' %}
                  <div class="hero__description h5--body">
                    {{ block.settings.richtext }}
                  </div>
                {% endunless %}

                {% unless block.settings.link_text == '' %}
                  {% if block.settings.link_text == 'Report' %}
                    <a
                      class="hero__btn {{ block.settings.button_color }} {{ block.settings.button_size }} {{ block.settings.button_style }}"
                      href="{{ block.settings.link }}"
                      target="_blank"
                      style="background-color:#495AF5;color:#fff;width:110px;text-align:center; font-size:16px;padding-top:10px;padding-bottom:10px;"
                    >
                      {{ block.settings.link_text | escape }}
                    </a>
                  {% else %}
                    {% if block.settings.link contains '#hot-dpn-devices' %}
                      <a
                        class="hero__btn {{ block.settings.button_color }} {{ block.settings.button_size }} {{ block.settings.button_style }}"
                        href="javascript:toHotDPN()"
                        style="background-color:#fff;color:#000"
                      >
                        {{ block.settings.link_text | escape }}
                      </a>
                    {% else %}
                      {% if block.settings.link contains '#send' %}
                        <h1 class="hero__title h2">Wall of love for Deeper Network</h1>
                        <a
                          class="hero__btn {{ block.settings.button_color }} {{ block.settings.button_size }} {{ block.settings.button_style }}"
                          href="{{ block.settings.link }}"
                          style="background-color:#495AF5;color:#fff;text-align:center; font-size:16px;padding-top:10px;padding-bottom:10px;"
                        >
                          {{ block.settings.link_text | escape }}
                        </a>
                      {% else %}
                        <a
                          class="hero__btn {{ block.settings.button_color }} {{ block.settings.button_size }} {{ block.settings.button_style }}"
                          href="{{ block.settings.link }}"
                          style="background-color:#fff;color:#000"
                        >
                          {{ block.settings.link_text | escape }}
                        </a>
                      {% endif %}
                    {% endif %}
                  {% endif %}
                {% endunless %}
              </div>

              <style>
                .banner-href {
                  position: absolute;
                  top: 0;
                  bottom: 0;
                  opacity: 0;
                  padding: 0;
                  width: 100%;
                  height: 90%;
                  z-index: 11;
                  display:block !important;
                }
                .banner-href-air {
                  position: absolute;
                  top: 0;
                  bottom: 0;
                  opacity: 0;
                  padding: 0;
                  left: 0 !important;
                  width: 23% !important;
                  height: 90%;
                  z-index: 11;
                }
                .banner-href-link-air {
                  position: absolute;
                  top: 0;
                  bottom: 0;
                  opacity: 0;
                  padding: 0;
                  height: 90%;
                  right: 0 !important;
                  width: 77% !important;
                  z-index: 11;
                }
                /* 小屏幕 */
                @media (max-width: 1200px) {
                  .banner-href {
                    height: 100%;
                  }
                  .banner-href-air,
                  .banner-href-link-air {
                    width: 50% !important;
                  }
                }
              </style>

              {% if block.settings.title contains 'Time offer' %}
                <a href="/collections/all" class="banner-href"></a>
              {% endif %}
              {% if block.settings.title contains 'Lite' %}
                <a href="/products/deeper-connect-pico-lite" class="banner-href"></a>
              {% endif %}

              {% if block.settings.title contains 'Depper Connect Air' %}
                <a href="/products/deeper-connect-air" class="banner-href-air" target="_blank"></a>
                <a
                  href="https://cdn.shopify.com/videos/c/o/v/3e00b7d791d64bdeb1094acec76863d2.mp4"
                  class="banner-href-link-air"
                  target="_blank"
                ></a>
              {% endif %}
              {% if block.settings.title contains 'Mother’s Day' %}
                {% comment %} <a href="/products/reseller-trail-package-pico-x-4-mini-x-3-se-x-3" class="banner-href" target="_blank" ></a> {% endcomment %}
                <script>
                  function scrollToDPNProducts() {
                    setTimeout(function () {
                      window.scrollTo({
                        behavior: 'smooth',
                        top:
                          document.querySelector('[id=our-products]').getBoundingClientRect().top -
                          document.body.getBoundingClientRect().top -
                          40,
                      });
                    }, 500);
                  }
                </script>
                <a
                  href="javascript:scrollToDPNProducts();"
                  style="position: absolute;top: 0;bottom: 0;opacity: 0;padding: 0;width: 100%;height: 90%;z-index: 11;"
                ></a>
              {% endif %}

              {% if block.settings.title contains 'black friday 2023' %}
                <a href="/pages/black-friday" class="banner-href"></a>
              {% endif %}

              {% if block.settings.title contains 'Deeper Care+' %}
                <a href="/pages/deeper-care" class="banner-href"></a>
              {% endif %}

              {% if block.settings.title contains 'Earth Day Sale' %}
                <a href="/products/new-deeper-connect-pico-set" class="banner-href" target="_blank"></a>
              {% endif %}

              {% if block.settings.title contains 'Spring sale' %}
                <script>
                  function scrollToDPNProducts() {
                    setTimeout(function () {
                      window.scrollTo({
                        behavior: 'smooth',
                        top:
                          document.querySelector('[id=dpn-bundle]').getBoundingClientRect().top -
                          document.body.getBoundingClientRect().top -
                          40,
                      });
                    }, 500);
                  }
                </script>
                <a
                  href="javascript:scrollToDPNProducts();"
                  style="position: absolute;top: 0;bottom: 0;opacity: 0;padding: 0;width: 100%;height: 90%;z-index: 11;"
                ></a>
              {% endif %}

              <div slide-custom-prev class="custom-prev-next-button previous"></div>
              <div slide-custom-next class="custom-prev-next-button next"></div>
            </div>

            <div
              class="image-overlay"
              style="--bg:{{ block.settings.overlay_color }}; opacity:{{ block.settings.overlay_opacity | times: 0.01 }};"
            ></div>

            {% assign desktop_image_classes = section.settings.height %}
            {% assign mobile_image_classes = section.settings.height | append: ' small-down--show hide' %}
            {% assign mobile_image = '' %}
            {% if block.settings.mobile_image != blank %}
              {% assign desktop_image_classes = desktop_image_classes | append: ' medium-up--show hide' %}
              <!-- {{ section.settings.height | json }} -->

              {% capture mobile_image %}
                {% render 'image-background', img_object: block.settings.mobile_image, frame_height_class: mobile_image_classes, bg_position: block.settings.bg_position %}
              {% endcapture %}
            {% endif %}

            {% render 'image-background',
              img_object: block.settings.image,
              frame_height_class: desktop_image_classes,
              bg_position: block.settings.bg_position
            %}

            {% if mobile_image != '' %}
              {{ mobile_image }}
            {% endif %}

            {% assign dots_positioned_edge = true %}
            {% if section.settings.dots_position == 'dots--center' %}
              {% assign dots_positioned_edge = false %}
            {% endif %}
            {% if section.settings.height == 'use_screen_full' and dots_positioned_edge %}
              <div class="scroll_icon_wrap">
                <button
                  data-scroll-down
                  class="scroll_link bloop"
                  aria-label="{{ 'general.accessibility.scroll' | t }}"
                >
                  <span class="scroll_icon">{% render 'icon-arrow-down' %} </span>
                </button>
              </div>
            {% endif %}
          </div>

          {% if block.settings.title contains 'Bundle Sale' %}
            </a>
          {% endif %}
        {% endfor %}
      </div>

      {%- unless request.path contains 'bug-bounty-program' -%}
        <div class="custom-scrollbar small-down--show" data-custom-scrollbar>
          <div class="custom-scrollbar__track" data-custom-scrollbar-track></div>
        </div>
      {%- endunless -%}
    {% endif %}

    {% if section.blocks.size == 0 %}
      <div class="slideshow__slide">
        <div class="hero__content__wrapper align--middle-left">
          <div class="hero__content">This section doesn’t currently include any content. Add content to this section using the sidebar."</div>
        </div>
        <div class="image-overlay" style="--bg: #000; opacity:0.15;"></div>
      </div>
    {% endif %}
  </div>
</div>

<script>
  function toHotDPN() {
    let selector = '[id=hot-dpn-devices]';
    window.scrollTo({
      behavior: 'smooth',
      top:
        document.querySelector(selector).getBoundingClientRect().top - document.body.getBoundingClientRect().top - 70,
    });
  }
</script>

