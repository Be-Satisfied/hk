  position: absolute;
  top: 0;
  bottom: 0;
  opacity: 0;
  padding: 0;
  width: 50%;
  height: 100%;
  z-index: 10;
}
.slideshow__slide {
  width: 100%;
}

.slideshow__slide .hero__content {
  position: relative;
  z-index: 50;
}
.image__hero__frame {
    position: relative;
    overflow: hidden;
}
