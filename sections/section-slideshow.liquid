  display: block  !important;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
}
.no-js .image__hero__frame noscript img {
  height: 100%;
  -o-object-fit: cover;
  object-fit: cover;
}
.image__hero__pane {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.image__hero__scale {
    position: relative;
    display: block;
    width: 100%;
    height: 100%;
    min-height: 100%;
}

  .image__hero__frame {
    position: relative;
    overflow: hidden;
}
  .hide {
    display: none !important;
}
  .no-js .image__hero__frame,
.no-js .image__fill {
  padding-top: 0px !important;
}

  .responsive-wide-image {
  width: 100%;
  display: block;
}
  
